@startuml PMA_Activity_Diagram
' Personalized Medical Assistant - Activity Diagram (Compact & Horizontal)
' Generated: November 7, 2025
' To use in draw.io: Arrange → Insert → Advanced → PlantUML

title Personalized Medical Assistant - Activity Diagram

skinparam shadowing false
skinparam defaultTextAlignment center
skinparam dpi 150
skinparam defaultFontSize 6

skinparam activity {
    BackgroundColor LightBlue
    BorderColor DarkBlue
    ArrowColor Black
    FontSize 6
}

skinparam partition {
    BackgroundColor LightYellow
    BorderColor Orange
    FontSize 7
}

skinparam ArrowColor Black
skinparam startColor Green
skinparam endColor Red

left to right direction

start
:Visit Website;

if (Logged In?) then (no)
    :Login;
    if (Success?) then (no)
        stop
    endif
endif

:Dashboard;

if (User Type?) then (Patient)
    
    partition "Patient" {
        :Enter Symptoms;
        :ML Prediction;
        :Upload Records;
        :Set Reminders;
        :Book Appointment;
    }
    
else (Doctor)
    
    partition "Doctor" {
        :View Requests;
        :Accept/Reject;
        :Reply Messages;
        :Update Availability;
    }
    
endif

:Logout;
stop

@enduml
